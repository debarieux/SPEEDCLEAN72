{
  "compilerOptions": {
    "target": "ES2016", // ou une version plus récente si nécessaire
    "module": "ESNext",
    "outDir": "./dist", // Répertoire de sortie pour le JS compilé
    "rootDir": "./src", // Répertoire source pour les fichiers TS
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node" // Ajouté pour la résolution de modules Node
  },
  "include": ["src/**/*"], // Inclure tous les fichiers dans src
  "exclude": ["node_modules"] // Exclure node_modules
}